<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:autofit="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:background="@color/BLACK"
                tools:context="com.unathemastudios.bitrate.PlayingNowFragment">

    <ImageView
        android:id="@+id/ivPlayingNowExtended"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:elevation="4dp"
        android:scaleType="centerInside"/>

    <ImageButton
        android:id="@+id/ibSleepTimer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:layout_alignTop="@+id/ibPPPLayingNow"
        android:background="@color/transparent"
        android:scaleType="fitXY"
        android:layout_alignParentStart="true"
        android:elevation="4dp"
        android:src="@drawable/ic_snooze"/>

    <ImageButton
        android:id="@+id/ibRecordCurrentRadio"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:layout_alignTop="@+id/ibPPPLayingNow"
        android:layout_alignParentEnd="true"
        android:background="@color/transparent"
        android:elevation="4dp"
        android:scaleType="fitXY"
        android:tint="@color/RED"
        app:srcCompat="@drawable/ic_fiber_manual_record"/>

    <me.grantland.widget.AutofitTextView
        android:id="@+id/tvPlayingNowName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRadioMetadata"
        android:layout_above="@+id/ibPPPLayingNow"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:elevation="4dp"
        android:fontFamily="monospace"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@color/textColorPrimary"
        android:textSize="40sp"
        autofit:minTextSize="25sp"/>

    <ImageButton
        android:id="@+id/ibPPPLayingNow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@color/transparent"
        android:elevation="4dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_play_circle_outline"/>

    <TextView
        android:id="@+id/tvTimeRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ibSleepTimer"
        android:layout_alignStart="@+id/ibSleepTimer"
        android:layout_below="@+id/ibSleepTimer"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:elevation="4dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvIsRecorded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ibRecordCurrentRadio"
        android:layout_alignStart="@+id/ibRecordCurrentRadio"
        android:layout_below="@+id/ibRecordCurrentRadio"
        android:elevation="4dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvRadioMetadata"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivPlayingNowExtended"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="@color/textColorPrimary"/>

    <ImageButton
        android:id="@+id/ibAboutUs"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:background="@color/transparent"
        android:elevation="4dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_info_outline_black_24dp"/>

    <RelativeLayout

        android:id="@+id/loadingLayoutBig"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp">

        <ProgressBar
            android:id="@+id/progressBarBig"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="true"/>
    </RelativeLayout>
</RelativeLayout>
