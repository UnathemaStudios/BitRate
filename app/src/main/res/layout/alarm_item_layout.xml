<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <TextView
        android:id="@+id/tvtime_for_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="10:30"
        android:textColor="@color/windowBackground"
        android:textSize="36sp"/>

    <Switch
        android:id="@+id/sw_for_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:splitTrack="false"/>

    <TextView
        android:id="@+id/tvDescription_for_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvtime_for_alarm"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textColor="@color/lightPrimaryColor"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_toStartOf="@+id/sw_for_alarm"/>

    <ImageView
        android:id="@+id/ibBin_for_alarm"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/sw_for_alarm"
        android:layout_alignTop="@+id/tvDescription_for_alarm"
        android:background="@color/transparent"
        app:srcCompat="@drawable/ic_bin"/>
</RelativeLayout>