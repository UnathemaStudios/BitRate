<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.unathemastudios.bitrate.SearchShoutcastFragment">

    <EditText
        android:id="@+id/etSearchShoutcast"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Search Shoutcast.com"
        android:inputType="text"
        android:singleLine="true"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:layout_toEndOf="@+id/exitAddShoutCast"
        android:layout_toStartOf="@+id/ibSearchShoutcast"/>

    <ImageButton
        android:id="@+id/exitAddShoutCast"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:tint="@color/bb_darkBackgroundColor"
        app:srcCompat="@drawable/ic_close_black_24dp"/>

    <ImageButton
        android:id="@+id/ibSearchShoutcast"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_search"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etSearchShoutcast"/>
</RelativeLayout>